<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:VamaDesktop.ViewModels"
             xmlns:layouts="clr-namespace:VamaDesktop.Layouts"
             x:DataType="vm:AdminPanelViewModel"
             x:Class="VamaDesktop.Views.AdminPanelView">
    <layouts:SidebarLayout Index="-1" Router="{Binding Router}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24">
            <Svg Width="160" Path="{DynamicResource LogoPath}" />
            <StackPanel Spacing="12">
                <TextBlock Text="Panel Administratora"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Wybierz moduł do zarządzania"
                           FontSize="16"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontWeight="Regular"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </layouts:SidebarLayout>
</UserControl>