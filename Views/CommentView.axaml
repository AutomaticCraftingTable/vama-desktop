<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VamaDesktop.Views.CommentView">
    <Border Padding="24">
        <StackPanel>
            <Button Classes="text" Content="⋮" >
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Spacing="8">
                            <Button Click="ReportComment" Classes="current slim">Zgłoś komentarz</Button>
                            <Button Click="BanComment" Classes="current slim">Zablokuj komentarz</Button>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
